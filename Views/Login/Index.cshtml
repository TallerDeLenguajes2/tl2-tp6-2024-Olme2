@model LoginViewModel

@if(ViewBag.ErrorMessage != null){
    <div class="error-message">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<h1 class="text-center">Login</h1>

@if(!string.IsNullOrEmpty(Model.Error)){
    <div class="alert alert-danger" role="alert">
        @Model.Error;
    </div>
}

@if(@Model.Autenticado){
    <span class="nav-link text-dark me-3">Bienvenido @Model.Usuario</span>
    <a class="nav-link" href="@Url.Action("Logout", "Login")">Cerrar Sesión</a>
}else{
    <div class="container display-flex justify-content-center align-items-center">
        <h3 class="text-center">Iniciar Sesión</h3>
        <form method="post" asp-action="Login">
            <div class="form-group">
                <label for="usuario" class="form-label">Usuario:</label>
                <input type="text" class="form-control" id="usuario" name="usuario" value="@Model.Usuario" required>
            </div>
            <div class="form-group">
                <label for="contraseña" class="form-label">Contraseña:</label>
                <input type="password" class="form-control" id="contraseña" name="contraseña" required>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                <a asp-controller="Login" asp-action="CrearUsuario" class="btn btn-success">Crear Usuario</a>
            </div>
        </form>
    </div>
}