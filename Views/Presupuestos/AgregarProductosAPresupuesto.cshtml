@model int
<h3>Agregacion de Productos al Presupuesto @Model</h3>
<form asp-controller="Presupuestos" asp-action="AgregarProductos" method="post" class="container mt-4">
    <table class="table table-bordered">
            <input type="hidden" name="idPresupuesto" value="@Model">
                <thead>
                    <th>ID</th>
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                </thead>
                <tbody>
                    @foreach(var producto in (List<Productos>)ViewData["Productos"]){
                        <tr>
                            <td>@producto.IdProducto
                                <input type="hidden" name="idsProductos" value="@producto.IdProducto">
                            </td>
                            <td>@producto.Descripcion</td>
                            <td>$@String.Format("{0:N2}", producto.Precio)</td>
                            <td><input class="form-control" type="number" name="cantidades" value="0" min="0"></td>
                        </tr>
                    }
                </tbody>
    </table>
    <div class="mt-3">
    <button type="submit" class="btn btn-primary">Agregar Productos</button>
    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>