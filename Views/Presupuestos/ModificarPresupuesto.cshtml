@model ModificarPresupuestoViewModel

<h3>Modificacion del presupuesto nÂ° @Model.IdPresupuesto</h3>
<form asp-controller="Presupuestos" asp-action="ModificarElPresupuesto" method="post" class="form container mt-4">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="IdPresupuesto" value="@Model.IdPresupuesto">
    <div class="form-group">
        <label for="IdCliente" class="form-label">Cliente</label>
            <select name="IdCliente" class="form-control" required>
                <option value="">Seleccione un cliente</option>
                @foreach (var cliente in (IEnumerable<SelectListItem>)ViewData["Clientes"])
                {
                    <option value="@cliente.Value">@cliente.Text</option>
                }
            </select>
            <span asp-validation-for="IdCliente" class="text-danger"></span>
    </div>
    <div class="form-group">
    <label asp-for="FechaCreacion">Fecha</label>
    <input asp-for="FechaCreacion" type="datetime-local" class="form-control" value="@Model.FechaCreacion.ToString("yyyy-MM-ddTHH:mm")">
    <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}