@model Presupuestos

<h3>Modificacion del presupuesto nÂ° @Model.IdPresupuesto</h3>
<form asp-controller="Presupuestos" asp-action="ModificarElPresupuesto" method="post" class="form container mt-4">
    <input type="hidden" asp-for="IdPresupuesto" value="@Model.IdPresupuesto">
    <div class="form-group">
    <label asp-for="Cliente.ClienteId">ID del Cliente</label>
    <input asp-for="Cliente.ClienteId" type="number" class="form-control" value="@Model.Cliente.ClienteId" required>
    </div>
    <div class="form-group">
    <label asp-for="FechaCreacion">Fecha</label>
    <input asp-for="FechaCreacion" type="datetime-local" class="form-control" value="@Model.FechaCreacion.ToString("yyyy-MM-ddTHH:mm")" required>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Actualizar</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>