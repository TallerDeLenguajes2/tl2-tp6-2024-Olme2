@model Presupuestos

<h3>Creacion de nuevo presupuesto</h3>
<form asp-controller="Presupuestos" asp-action="CrearPresupuesto" method="post" class="form container mt-4">
    <div class="form-group">
        <label asp-for="IdPresupuesto">ID del Presupuesto</label>
        <input asp-for="IdPresupuesto" class="form-control" readonly>
        <input type="hidden" asp-for="IdPresupuesto">
    </div>
    <div class="form-group">
    <label asp-for="Cliente.ClienteId">ID del Cliente</label>
    <input asp-for="Cliente.ClienteId" type="number" class="form-control" required>
    </div>
    <input type="hidden" asp-for="FechaCreacion" >
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Crear</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>