@model AltaPresupuestoViewModel

<h3>Creacion de nuevo presupuesto</h3>
<form asp-controller="Presupuestos" asp-action="CrearPresupuesto" method="post" class="form container mt-4">
    <div class="form-group">
        <label for="IdCliente">ID del Cliente</label>
        <select name="IdCliente" class="form-control" required>
            <option value="">Seleccione un cliente</option>
            @foreach(var cliente in (IEnumerable<SelectListItem>)ViewData["clientes"]){
                    <option value="@cliente.Value">@cliente.Text</option>
                }
        </select>
        <span asp-validation-for="IdCliente" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaCreacion" class="form-label">Fecha de Creaci√≥n</label>
        <input asp-for="FechaCreacion" type="datetime-local" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required readonly/>
        <span asp-validation-for="FechaCreacion" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Crear</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}