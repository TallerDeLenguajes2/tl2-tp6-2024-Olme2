@model Clientes

<div class="container mt-4">
    <div class="mb-4">
        <h2 class="text-center">Eliminacion del cliente n°@Model.ClienteId </h2>
        <p class="text-center">Nombre: @Model.Nombre</p>
        <p class="text-center">Email: @Model.Email</p>
        <p class="text-center">Telefono: @Model.Telefono</p>
    </div>
    <h3 class="text-center">¿Desea eliminar el cliente?</h3>
    <div class="text-center">
        <a asp-controller="Clientes" asp-action="EliminarElCliente" asp-route-id="@Model.ClienteId" class="btn btn-danger">Eliminar</a>
        <a asp-controller="Clientes" asp-action="Index" class="btn btn-primary">Cancelar</a>
    </div>
</div>