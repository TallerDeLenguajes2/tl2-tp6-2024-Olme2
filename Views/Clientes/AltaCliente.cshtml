@model Clientes

<h3>Ingreso de nuevo Cliente</h3>
<form asp-controller="Clientes" asp-action="CrearCliente" method="post" calss="form">
    <div class="form-group">
        <label asp-for="ClienteId">ID del Cliente</label>
        <input asp-for="ClienteId" class="form-control" readonly>
        <input type="hidden" asp-formaction="ClienteId">
    </div>
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" placeholder="Escriba el Nombre del cliente" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" placeholder="Escriba el Email del cliente" class="form-control" required>
    </div>
    <div class="form-group">
        <label asp-for="Telefono">Tel√©fono</label>
        <input asp-for="Telefono" class="form-control" required>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Ingresar</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>