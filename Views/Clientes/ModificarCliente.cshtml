@model ModificarClienteViewModel

@if(ViewBag.ErrorMessage != null){
    <div class="error-message">
        <p>@ViewBag.ErrorMessage</p>
    </div>
}

<h3 class="text-center">Modificar Cliente n° @Model.ClienteId</h3>
<form asp-controller="Clientes" asp-action="ModificarElCliente" class="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ClienteId" value="@Model.ClienteId">
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" value="@Model.Nombre" class="form-control" required>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" value="@Model.Email" class="form-control" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefono">Teléfono</label>
        <input asp-for="Telefono" value="@Model.Telefono" class="form-control" required>
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>
    <div class=" mt-3">
        <button type="submit" class="btn btn-primary">Modificar</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}