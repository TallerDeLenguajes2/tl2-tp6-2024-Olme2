@model AltaProductoViewModel

<h3>Creacion de nuevo producto</h3>
<form asp-controller="Productos" asp-action="CrearProducto" method="post" class="form">
    <div class="form-group">
    <label asp-for="Descripcion">Descripci√≥n</label>
    <input asp-for="Descripcion" class="form-control" required>
    <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
    <label asp-for="Precio">Precio</label>
    <input asp-for="Precio" placeholder="Precio" class="form-control" required>
    <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Crear</button>
        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
    </div>
</form>

@section Scripts{<partial name="_ValidationScriptsPartial"/>}